<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.layout.AnchorPane?>
<GridPane prefHeight="720.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.112"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="nl.han.toetsplatform.module.nakijken.controllers.TentamenNakijkenController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="394.0" minWidth="2.0" prefWidth="278.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="952.0" minWidth="10.0" prefWidth="879.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="245.0" minWidth="10.0" prefWidth="43.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <GridPane  GridPane.columnIndex="1">
            <AnchorPane fx:id="vraagContainer" GridPane.rowIndex="0">

            </AnchorPane>
            <AnchorPane fx:id="nakijkContainer"  GridPane.rowIndex="1">

            </AnchorPane>

            <rowConstraints>
                <RowConstraints percentHeight="30" />
                <RowConstraints  percentHeight="70" />
            </rowConstraints>
        </GridPane>
        <Label text="Deze vraag is 5 punten waard." GridPane.columnIndex="1" GridPane.halignment="LEFT"
               GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets top="25.0"/>
            </GridPane.margin>
        </Label>
        <TextField maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="55.0"
                   GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1"
                   GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets top="25.0"/>
            </GridPane.margin>
        </TextField>
        <Label text="Aantal punten verdiend" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1"
               GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets right="75.0" top="25.0"/>
            </GridPane.margin>
        </Label>
        <Label text="Toelichting" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="1"
               GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets bottom="60.0"/>
            </GridPane.margin>
        </Label>
        <TextArea maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="60.0" prefWidth="750.0"
                  GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1"
                  GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets bottom="20.0"/>
            </GridPane.margin>
        </TextArea>
        <Button onAction="#handleVorigeBtnClick" mnemonicParsing="false" text="Vorige vraag" GridPane.columnIndex="1" GridPane.halignment="LEFT"
                GridPane.rowIndex="2" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="10.0"/>
            </GridPane.margin>
        </Button>
        <Button onAction="#handleVolgendeBtnClick" mnemonicParsing="false" text="Volgende vraag" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                GridPane.rowIndex="2" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="10.0"/>
            </GridPane.margin>
        </Button>
        <ListView fx:id="studentenListView" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0"
                  prefWidth="200.0" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets top="40.0"/>
            </GridPane.margin>
        </ListView>
        <Label text="Student" GridPane.halignment="CENTER" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="15.0"/>
            </GridPane.margin>
        </Label>
        <Button mnemonicParsing="false" onAction="#handleTerugButtonClick" text="Terug" GridPane.halignment="LEFT"
                GridPane.rowIndex="1" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets left="35.0" top="10.0"/>
            </GridPane.margin>
        </Button>
        <Button onAction="#btnNakijkenPressed" mnemonicParsing="false" text="Nakijken" GridPane.halignment="RIGHT" GridPane.rowIndex="1"
                GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets right="35.0" top="10.0"/>
            </GridPane.margin>
        </Button>
    </children>
</GridPane>
